<div class="my_body"></div>
<div class="container">
  <div class="row">
    <div class="col-md-3 col1">
      <div class="row">
        <div class="col-sm-6 col-md-4">
          <div class="thumbnail">
            <%= image_tag @profile.image, class: "user_image" %>
            <div class="caption">
            </div>
          </div>
          <h3 id="current_progress"><span>Learning Progress</span></h3>
          <div class="progress">
            <%# will modify when content is figured out %>

            <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 60%;">60%

            </div>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-6 col-md-4">
          <div class="thumbnail">
            <div class="caption">
              <h3 id="user_name"><%= @user.full_name %></h3>
              <ul>
                <li>Location: <span><%= @user.origin %></span></li>
                <li>Age: <span><%= @user.age(@user.birthday) %></span></li>
                <li>Currently Learning: <span><%= @user.languages_studying == "None" ? "None" : @user.languages_studying.to_sentence %></span></li>
              </ul>
              <button class="btn btn-primary message" role="button">Message <%= @user.full_name %></a></button>
            </div>
          </div>
        </div>
      </div>

    </div>

    <div class="col-md-6 col2">
      <div class="hanging"> 
        <%= image_tag "languages.png", :class => "hanging" %>
      </div>
      <iframe class="game_modal" src="/learning"></iframe>
      <div class="msg_container">
        <textarea class="text_area" rows="10" cols="70" name="usrtxt" wrap="hard"></textarea> <br />
        <button data-dismiss="modal" class="btn  btn-large send_button"> Close</button>
        <asp:Button runat="server" ID="btnSaveImage" Text="Save Image" CssClass="Greengradiant btn- large" OnClick="btnSaveImage_Click" UseSubmitBehavior="false" data-dismiss="modal" />
      </div>

      <div class="alert alert-success msg_alert" role="alert">Message Sent!</div>
      <div class="well well-lg bio_box"><%= @profile.bio %></div>

      <button type="button" class="btn btn-success resume_game_button hvr-back-pulse" >START NEW GAME OR RESUME <br />EXISTING GAME!</button>
    </div>

    <div class="col-md-2 col3">
      <div class="row">
        <div class="col-xs-6 col-md-3">
          <div class="thumbnail right_col">
            <h3>People studying the same language</h3>
            <ul>
              <% @same_language.each do |user| %>
                <% if user.id != current_user.id %>
                  <li><%= link_to user_path(user) do %>
                    <%# add messaging direct to the envelope %>
                    <%= user.full_name %> <span class="glyphicon glyphicon-envelope"></span></li>
                <% end %>
              <% end %>
            <% end %>
            </ul>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-xs-6 col-md-3">
          <div class="thumbnail right_col_bottom">
            <h3>Nearby Users</h3>
            <ul>
              <% @nearby.each do |user| %>
                <% if user.id != current_user.id %>
                  <li><%= link_to user_path(user) do %>
                    <%# add messaging direct to the envelope %>
                    <%= user.full_name %> <span class="glyphicon glyphicon-envelope"></span></li>
                <% end %>
              <% end %>
            <% end %>
            </ul>
          </div>
        </div>
      </div>


    </div>
  </div>
</div>
